@model List<Argo.Models.Language>
@{
    var currentLanguage = Model.Single(x => x.IsActive);
    var availableLanguages = Model.Where(x => !x.IsActive);
}

<div id="lang-dropdown" class="dropdown">
    <button class="dropdown-toggle" type="button">
        @currentLanguage.Name <i class="icon icon-caret"></i>
    </button>
    <ul class="dropdown-menu">
        @foreach (var language in availableLanguages)
        {
            <li><a href="@Url.Content("~/" + language.Culture)">@language.Name</a></li>
        }
    </ul>
</div>